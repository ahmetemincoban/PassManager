@model PassManager.Models.GroupModel

@{
    ViewData["Title"] = "Create a Group";
}

<h1 class="text-center">Create a Group</h1>
<hr />
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="groupName" class="control-label"></label>
                <input asp-for="groupName" class="form-control" />
                <span asp-validation-for="groupName" class="text-danger"></span>
            </div>
            <div class="form-group postButtonDiv">
                <input type="submit" value="Create" class="btn btn-primary postButtonHalf" />
                <a asp-action="Index" asp-controller="Group" class="btn btn-dark postButtonHalf">Back to list</a>
            </div>
        </form>
    </div>
<div class="col-md-2"></div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
